
<header>
	<%= render 'shared/topnav' %>
</header>

<main>
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s3"><a href="#view">Todos los Horarios</a></li>
				<li class="tab col s3"><a href="#userEvents">Mis Horarios</a></li>
				<li class="tab col s3"><a href="#export">Exportar a Calendario</a></li>
				<li class="tab col s3"><a href="#faq">FAQ</a></li>
			</ul>
		</div>
		<div id="view" class="col s12">
			<%= render "horarios" %>
		</div>
		<div id="userEvents" class="col s12">
			<%= render "user_event" %>
		</div>
		<div id="export" class="col s12">
			<%= render "exportar" %>
		</div>

		<div id="faq" class="col s12">
			"faq"
		</div>
	</div>
	<%
	@careers.each do |career|
		career.years.each do |year|
			year.subjects.each do |subject|
				subject.events.each do |event|%>
				 <%=render partial: "modal", locals: {event: event}%>
				<%end
			end
		end
	end
	%>
</main>

<footer class="page-footer  cyan darken-1">
	<div class="container">
		<div class="row">
			<div class="col l6 s12">
				<h5 class="white-text">Footer Content</h5>
				<p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
			</div>
			<div class="col l4 offset-l2 s12">
				<h5 class="white-text">Links</h5>
				<ul>
					<li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="footer-copyright">
		<div class="container">
			Gianni Ballerini
			<a class="grey-text text-lighten-4 right" href="#!">Github</a>
		</div>
	</div>
</footer>
