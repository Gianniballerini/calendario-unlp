<!-- CARRERAS -->
<div class="row">
  <% @careers.each do |career| %>
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><div><%= career.name %></div></span>
      </div>
      <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
          <!-- AÃ‘OS -->
          <% career.years.each do |year| %>
          <li class="tab">
            <a href="#<%= (year.career.name + " " + year.name).parameterize %>"><%= t(year.name) %></a>
          </li>
          <% end %>
          <!-- FIN AÃ‘OS -->
        </ul>
      </div>
      <div class="card-content grey lighten-4">
        <% career.years.each do |year| %>
        <div id="<%= (year.career.name + " " + year.name).parameterize %>">
          <ul class="collapsible popout">
            <% year.subjects.each do |subject| %>
            <li>
              <div class="collapsible-header">
                <%= subject.name %>
              </div>
              <div class="collapsible-body">
                <ul class="collection">
                  <%= link_to({ :controller => 'events', :action => 'new', :subject_id => subject}, {:class => 'tooltipped center cyan lighten-4 collection-item', :'data-position' => 'bottom', :'data-delay' => '50', :'data-tooltip' => 'Agregar Horario'}) do %>
                  <span class="material-icons white-text">add</span>
                  <% end %>
                  <% subject.events.each do |event| %>
                  <div class="valign-wrapper row">
                    <li class="collection-item grey lighten-4 ">
                      <div class="col s6 m3 center"> <%= event.name %> </div>
                      <div class="col s6 m3 center"> <%= l event.start_date, format: :day %> </div>
                      <div class="col s12 m3 center"> De <%= event.start_time.strftime("%H:%M") %> a <%= event.end_time.strftime("%H:%M") %></div>
                      <div class="col s6 m1 center">
                        <a class="btn-flat modal-trigger" href="#<%= event.id %>">
                          <span class="material-icons align-icon-text">info_outline</span>
                        </a>
                      </div>
                      <div class="col s6 m1 center">
                        <a class="btn-flat modal-trigger" href="#<%= event.id %>">
                          <span class="material-icons align-icon-text">star_border</span>
                        </a>
                      </div>

                    </li>
                  </div>
                  <% end %>
                </ul>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<!-- FIN CARRERAS -->
