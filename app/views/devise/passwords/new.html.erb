<header class="full">
  <%= render "devise/shared/headTitle"  %>
</header>
<h2 class="center">Forgot your password?</h2>
<main class="full valign-wrapper">
	<div class="container">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="input-field">
		  	<i class="material-icons prefix">mail</i>
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :validate %>
		  </div>

		  <div class="actions center">
		    <%= f.submit "Send me reset password instructions", class: :btn %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</main>