<header class="full">
  <%= render "devise/shared/headTitle"  %>
</header>
<h2 class="center">Change your password</h2>
<main class="full">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input-field">
        <% if @minimum_password_length %>
          <em class="right">(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <i class="material-icons prefix">lock</i>
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", :pattern => '.{6,}', :class => 'validate'%>
      </div>

      <div class="input-field">
        <i class="material-icons prefix">lock</i>
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :pattern => '.{6,}', :class => 'validate'%>
      </div>

      <div class="actions center">
        <%= f.submit "Change my password", :class => 'btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
