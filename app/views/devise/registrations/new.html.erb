<header class="full">
  <%= render "devise/shared/headTitle"  %>
</header>
<h2 class="center">Registrarse</h2>
<main class="full">
  <div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="input-field">
      <i class="material-icons prefix">mail</i>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: :'required', :class => 'validate' %>
    </div>

    <div class="input-field">
      <% if @minimum_password_length %>
      <em class="right">(<%= @minimum_password_length %> characters minimum)</em><br>
      <% end %>
      <i class="material-icons prefix">lock</i>
      <%= f.label :password %><br>
      <%= f.password_field :password, autocomplete: "off" , :class => 'validate', required: :'required' , :pattern => '.{6,}'%>
    </div>

    <div class="input-field">
      <i class="material-icons prefix">lock_outline</i>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'validate', required: :'required', :pattern => '.{6,}'%>
    </div>

    <div class="actions center">
      <%= f.submit "Sign up", :class => 'btn'%>
    </div>
    <%= devise_error_messages! %>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</main>